String owner_num = "+919430214629";
String owner_sms = "";
int test_count = 1;
String parked_latitude = "80.000004";
String parked_longitude = "80.000004";
String new_latitude = "80.000004";
String new_longitude = "80.000004";
String vehicle_status = "";
String response_sms = "";
String textMessage = "";
